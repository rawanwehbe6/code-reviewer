{
    "name": "code-reviewer/project",
    "description": "Code reviewer service",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "vlucas/phpdotenv": "^5.5",
        "openai-php/client": "*",
        "guzzlehttp/guzzle": "*"
    },
    "autoload": {
        "classmap": ["src/"]
    },
    "minimum-stability": "stable",
    "license": "MIT",
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "10"
    }
}
